<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout"
                                                   android:background="@drawable/screen_background"

>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="414dp"
            android:layout_height="600dp"
            android:id="@+id/cardView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/rounded_button"

            app:layout_constraintHorizontal_bias="0.666">

        <Button
                android:textColor="#FFFFFF"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="18dp"
                android:text="Salvar"
                android:background="@drawable/rounded_button_purple"
                android:layout_width="129dp"
                android:layout_height="51dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/Plain_Nome" android:id="@+id/Salvar_Button"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/rounded_button_purple"
                android:text="Nome do Lembrete"
                android:textSize="12dp"
                android:textColor="#FFFFFF"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/TextField_Nome" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.113"
                app:layout_constraintVertical_bias="0.214"
                app:fontFamily="@font/ubuntu_bold"
        />
        <Button
                android:gravity="center"
                android:background="@drawable/rounded_button_purple"
                android:textColor="#FFFFFF"
                android:text="Hora"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/TextField_Hora" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/TextField_Nome"
                android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.113"
                app:fontFamily="@font/ubuntu_bold"
        />
        <TextView
                android:gravity="center"
                android:background="@drawable/rounded_button_purple"
                android:textColor="#FFFFFF"
                android:text="Descricao"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/TextField_descricao"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.113"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/TextField_Hora"
                app:layout_constraintVertical_bias="0.13" app:fontFamily="@font/ubuntu_bold"/>
        <EditText
                android:gravity="center"
                android:background="@drawable/rounded_button_white"
                android:layout_width="218dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:textColor="#c6c6c6"
                android:fontFamily="@font/ubuntu_bold"
                android:ems="10"
                android:id="@+id/Plain_Nome"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="12dp"
                tools:ignore="UnknownId"
                app:layout_constraintStart_toEndOf="@+id/TextField_Nome" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="124dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:gravity="center"
                android:background="@drawable/rounded_button_white"
                android:layout_width="218dp"
                android:layout_height="40dp"
                android:inputType="date"
                android:textColor="#c6c6c6"
                android:fontFamily="@font/ubuntu_bold"
                android:ems="10"
                android:id="@+id/Plain_Hora" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/TextField_Hora"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                tools:ignore="UnknownId"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/Plain_Nome"
                app:layout_constraintBottom_toTopOf="@+id/Plain_Descricao" android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0"/>
        <EditText
                android:gravity="center"
                android:background="@drawable/rounded_button_white"
                android:layout_width="218dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:textColor="#c6c6c6"
                android:fontFamily="@font/ubuntu_bold"
                android:ems="10"
                android:id="@+id/Plain_Descricao" app:layout_constraintStart_toEndOf="@+id/TextField_descricao"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="268dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <RadioGroup
                android:layout_width="346dp"
                android:layout_height="206dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.863"
                android:id="@+id/Radio_Importancia">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:text="Qual a prioridade do seu lembrete?"
                    android:textSize="18dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textColor="#777777"
            />

            <RadioButton
                    android:textColor="#00FF00"
                    android:fontFamily="@font/ubuntu_bold"
                    android:padding="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pouco Importante"
            />
            <RadioButton
                    android:textColor="#FFFF00"
                    android:fontFamily="@font/ubuntu_bold"
                    android:padding="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Importante"
            />

            <RadioButton
                    android:textColor="#FF0000"
                    android:fontFamily="@font/ubuntu_bold"
                    android:padding="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urgente"
            />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:textColor="#FFFFFf"
            android:text="Criar Lembrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextFiel_Nome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="36sp" app:fontFamily="@font/ubuntu_bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>